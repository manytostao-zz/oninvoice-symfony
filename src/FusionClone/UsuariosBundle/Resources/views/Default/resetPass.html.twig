{% extends '::frontend.html.twig' %}
{% block header %}
    {{ form_start(formUsua) }}
    <section class="header-content">
        <h1 class="pull-left" style="position: relative">
            Formulario de Usuario
        </h1>

        <div class="pull-right">
            {{ form_widget(formUsua.Guardar) }}</div>
        <div class="clearfix"></div>

    </section>
{% endblock %}
{% block body %}
    <section class="main-content">
    {% if (form_errors(formUsua)) %}
        <div class="alert alert-danger">{{ form_errors(formUsua) }}</div>
    {% endif %}
    {% if (form_errors(formUsua.password.first)) %}
        <div class="alert alert-danger">{{ form_errors(formUsua.password.first) }}</div>
    {% endif %}

    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <br/>

                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Nombre:</label>
                                    {{ form_widget(formUsua.nombre) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email:</label>
                                    {{ form_widget(formUsua.email) }}
                                </div>
                            </div>
                        </div>
                        {% if tipoForm == 'add' %}
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Contraseña:</label>
                                        {{ form_widget(formUsua.password.first, {'attr':{'class':'form-control' }}) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Repetir Contraseña:</label>
                                        {{ form_widget(formUsua.password.second, {'attr':{'class':'form-control' }}) }}
                                    </div>
                                </div>
                            </div>
                       {% else %}
                           {% do formUsua.password.first.setRendered %}
                           {% do formUsua.password.second.setRendered %}
                        {% endif %}
                        <div class="form-group">
                            <label>Compa&ntilde;&iacute;a:</label>
                            {{ form_widget(formUsua.compannia) }}
                        </div>
                        <div class="form-group">
                            <label>Direcci&oacute;n:</label>
                            {{ form_widget(formUsua.direccion) }}
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Tel&eacute;fono:</label>
                                    {{ form_widget(formUsua.telefono) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>M&oacute;vil:</label>
                                    {{ form_widget(formUsua.movil) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Fax:</label>
                                    {{ form_widget(formUsua.fax) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>P&aacute;gina web:</label>
                                    {{ form_widget(formUsua.webpage) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>{{ form_end(formUsua) }}
{% endblock %}